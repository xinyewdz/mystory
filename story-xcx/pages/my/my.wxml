<view class="page">
  <view class="weui-form">
  <form id="form">
  <view class="weui-cells weui-cells_form">
    <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd">
          <label for="file" class="weui-label">名称:</label>
        </view>
        <view class="weui-cell__bd">
          <input type="text" id="name" bindblur="nameEvent" class="weui-input"></input>
        </view>
      </view>
      <view class="weui-cell weui-cell_active">
        <view class="weiui-cell_hd">
            <label for="image" class="weui-label">音频文件</label>
        </view>
        <view class="weui-cell_bd" bindtap="chooseAudio">
          <audio style="width:200rpx;height:200rpx;" src="{{audioPath}}" controls="true" name="{{audio.Name}}" ></audio>
        </view>
      </view>
      <view class=" weui-cell weui-cell_active">
        <view class="weiui-cell_hd">
          <label for="image">封面文件</label>:
        </view>
        <view class="weui-cell_bd" bindtap="chooseImg">
          <image style="width:200rpx;height:200rpx;" src="{{image}}"></image>
        </view>
      </view>
      <view class="weui-form__opr-area">
        <a class="weui-btn weui-btn_primary" bindtap="saveStory">确定</a>
      </view>
      </view>
  </form>
  </view>
</view>
<!--index.wxml-->
<view class="page">
  <view class="weui-panel">
    <view class="weui-panel__hd">故事汇</view>
    <view class="weui-pannel__bd">
      <view class="weui-media-box weui-media-box_small-appmsg">
        <scroll-view class="weui-cells" scroll-y="true">
          <view wx:for="{{storyList}}" class="weui-cell weui-cell_active weui-cell_access" bindtap="play" data-idx="{{index}}" id="{{item.id}}">
            <view class="weui-cell__hd">
              <view class="weui-cell__hd"><image class="avatar" src="{{item.imageUrl}}"/></view>
            </view>
            <view class="weui-cell__bd weui-cell_primary">
              <p>{{item.name}}</p>
            </view>
          </view>
        </scroll-view>
      </view>
    </view>
  </view>
</view>
